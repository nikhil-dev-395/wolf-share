<!-- views/partials/header.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="shortcut icon" href="/icons/logo.svg" type="image/x-icon" />
    <link rel="stylesheet" href="/stylesheet/tailwind.css" />
    <link rel="stylesheet" href="/stylesheet/global.css" />

    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
  </head>

  <body
    class="w-full min-h-screen bg-slate-900 text-white !scroll-smooth font-sans"
  >
    <header class="md:w-[80%] w-full flex items-center max-w-[1340px] mx-auto">
      <nav
        class="flex bg-blue-50 flex-row w-[90%] md:w-1/2 px-7 md:px-12 lg:px-20 justify-between items-center rounded-2xl py-3 mt-6 mb-4 text-black mx-auto"
      >
        <!-- logo of wolf share -->
        <img
          src="/icons/logo.svg"
          class="w-9 hover:cursor-pointer"
          alt="wolf share"
          id="logo"
          title="home"
        />

        <ul class="flex gap-6 items-center">
          <!-- home -->
          <li>
            <a href="/">
              <img
                src="/icons/home.svg"
                class="w-5 hover:bg-blue-500 rounded-xl"
                alt="home"
                id="home"
                title="home"
              />
            </a>
          </li>
          <!-- account -->
          <li>
            <a href="/account">
              <img
                src="/icons/user.svg"
                class="w-5 hover:bg-blue-500 rounded-xl"
                alt="account"
                id="account"
                title="account"
              />
            </a>
          </li>

          <!-- pricing -->
          <li>
            <a href="/pricing">
              <img
                src="/icons/moneyIcon.svg"
                class="w-5 hover:bg-blue-500 rounded-xl"
                alt="pricing"
                id="pricing"
                title="pricing"
              />
            </a>
          </li>
        </ul>

        <!-- Buttons -->
        <div class="flex gap-2">
          <button
            id="logoutBtn"
            class="text-white border border-green-300 flex items-center py-2 px-3 bg-black rounded-xl hover:text-slate-100 hover:bg-slate-900/80 duration-200 ease-in-out"
            onclick="logout()"
          >
            <span class="mr-2 font-IBM hidden md:block">Logout</span>
            <img src="/icons/logout.svg" class="w-4" alt="logout" />
          </button>

          <a
            href="/login"
            id="loginButton"
            class="text-slate-50 border border-slate-300 flex items-center py-2 px-3 bg-black rounded-xl hover:text-slate-100 hover:bg-orange-800 duration-200 ease-in-out"
          >
            <span class="mr-2 font-IBM hidden md:block">Login</span>
            <img src="/icons/login.svg" class="w-4" alt="login" />
          </a>
        </div>
      </nav>
    </header>
  </body>

