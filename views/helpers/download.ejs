<!-- views/helpers/download.ejs -->

<%- include("../partials/header.ejs") %>

<section class="w-full h-full pt-3 pb-16">

<% if(locals.error) { %>

  <h1><%= locals.error %></h1>

  <% } else { %>

<div
  class=" rounded-xl py-8 px-6 max-w-lg mx-auto relative text-center bg-slate-100 "
>



  <!-- Download logo -->
  <img
    src="/icons/download-sd.svg"
    alt="download"
    class="w-24 mx-auto mb-6 opacity-80 transition-opacity duration-300 hover:opacity-100"
  />

  <!-- Download message -->
  <h3 class="text-2xl font-semibold text-blue-700 mb-4">
    Your file is ready to download!
  </h3>

  <!-- File info section -->
  <ul
    id="fileInfo"
    class="mt-4 text-gray-600 text-sm space-y-1"
  >
    <li class="text-gray-800 font-semibold">Sender: Nikhil Wankhade</li>
    <li class="text-gray-800 font-semibold">File: <%= filename %></li>
    <li class="text-gray-800 font-semibold">Size: <%= parseInt(fileSize/1000) %> kb</li>
  </ul>

  <!-- Download button -->
  <div class="mt-6">
    <a href="<%= downloadLink %>"
      id="fileDownloadBtn"
      class="bg-blue-600 w-48 text-white py-3 px-12 rounded-md shadow-md hover:bg-blue-500 transition-colors duration-300 mx-auto flex items-center gap-2"
    >
      <span>Download</span>
      <img
        src="/icons/download.svg"
        alt="download icon"
        class="w-5 h-5"
      />
    </a>
  </div>
</div>

<% } %>
</section>

<%- include("../partials/footer.ejs") %>
