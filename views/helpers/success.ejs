<%- include("../partials/header.ejs") %>

<section class="w-full h-screen flex justify-center">
  <div class="w-full mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8 text-center max-w-[90%]">
      <h3 class="text-2xl font-semibold text-green-600 mb-4">
        Your file uploaded successfully!
      </h3>
      <h2 class="text-xl font-medium text-gray-700 mb-2">
        File Name: <span class="font-bold text-blue-600"><%= filename %></span>
      </h2>
      <h2 class="text-xl font-medium text-gray-700 mb-2">
        File Size: <span class="font-bold text-blue-600"><%= fileSize %></span>
      </h2>
      <h2 class="text-xl font-medium text-gray-700 mb-4">
        Download URL:
        <a href="<%= download_url %>" class="text-blue-600 hover:underline"
          ><%= download_url %></a
        >
      </h2>

      <a
        href="/"
        class="mt-6 inline-block bg-blue-700 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-800 transition"
        >Back to Home</a
      >
    </div>
  </div>
</section>

<%- include("../partials/footer.ejs") %>
